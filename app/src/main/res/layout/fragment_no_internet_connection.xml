<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/black_alpha_80">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/view_no_internet_border"
        android:layout_margin="@dimen/size_20">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_no_internet_connection" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/UITextView"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/size_5"
            android:text="Whoops"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/UITextView"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="@dimen/size_5"
            android:text="@string/no_internet_connection_message"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgNoInternetConnectionProgress"
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"
            android:layout_marginTop="@dimen/size_30"
            android:src="@drawable/ic_no_internet_connection_progress" />

    </LinearLayout>

</FrameLayout>