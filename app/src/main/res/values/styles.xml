<resources>

    <style name="AppTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="UIEditText">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_alpha_60</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:lines">1</item>
    </style>

    <style name="UIButton">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:fontFamily">@font/nunito_black</item>
    </style>

    <style name="UITextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:fontFamily">@font/nunito_black</item>
    </style>

    <style name="UIHomeImageButton">
        <item name="android:layout_width">@dimen/size_60</item>
        <item name="android:layout_height">@dimen/size_60</item>
        <item name="android:padding">@dimen/size_10</item>
        <item name="android:background">@color/black_alpha_75</item>
    </style>

    <style name="UIHomeText">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_alpha_60</item>
        <item name="android:padding">@dimen/size_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:lines">1</item>
    </style>

    <style name="UIHomeImageArrow">
        <item name="android:layout_width">@dimen/size_75</item>
        <item name="android:layout_height">@dimen/size_75</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:alpha">0.6</item>
        <item name="android:layout_marginLeft">-3.5dp</item>
    </style>

    <style name="UIEditText.UserProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/size_15</item>
    </style>

    <style name="UIButton.UserProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/size_15</item>
    </style>

    <style name="UITextView.TrophyText">
        <item name="android:padding">@dimen/size_5</item>
        <item name="android:layout_marginBottom">@dimen/size_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TrophyImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TrophyView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/size_10</item>
        <item name="android:background">@color/black_alpha_60</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SettingView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/size_10</item>
        <item name="android:background">@color/black_alpha_60</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="UISettingText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:background">@color/black_alpha_60</item>
        <item name="android:padding">@dimen/size_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginLeft">@dimen/size_15</item>
        <item name="android:layout_marginRight">@dimen/size_15</item>
    </style>

    <style name="GameBoardRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">3</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="GameBoardRowItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/size_15</item>
    </style>

    <style name="GameBoardVerticalDivider">
        <item name="android:layout_width">@dimen/size_2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="GameBoardHorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_2</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="BeeResultStatusIcon">
        <item name="android:layout_width">@dimen/size_30</item>
        <item name="android:layout_height">@dimen/size_30</item>
        <item name="android:padding">@dimen/size_5</item>
        <item name="android:tint">@color/golden</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BeeResultStatusText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:layout_gravity">center</item>

    </style>

</resources>
